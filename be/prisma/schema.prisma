generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)
  isDeleted Boolean  @default(false)

  products Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)
  isDeleted   Boolean  @default(false)

  categoryId Int?
  category   Category? @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  // relation: khởi tạo mối quan hệ giữa các bảng cbi define
  // cascade: khi cta xóa 1 danh mục, những danh mục đó tương ứng vs sp nào thì sp đó bị xóa theo 
}
