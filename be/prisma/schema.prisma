generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  email     String  @unique
  password  String
  role      String
  isActice  Boolean
  isDeleted Boolean
  orders    Order[]
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)
  isDeleted Boolean  @default(false)

  products Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isActive    Boolean  @default(true)
  isDeleted   Boolean  @default(false)

  categoryId Int?
  category   Category?      @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  // relation: khởi tạo mối quan hệ giữa các bảng cbi define
  // cascade: khi cta xóa 1 danh mục, những danh mục đó tương ứng vs sp nào thì sp đó bị xóa theo 
  colors     ProductColor[]
}

model ProductColor {
  id        Int    @id @default(autoincrement())
  productId Int
  color     String
  colorCode String @default("#000000")

  product Product             @relation(fields: [productId], references: [id])
  images  ProductColorImage[]

  variants ProductColorVariants[]
}

model ProductColorImage {
  id       Int          @id @default(autoincrement())
  colorId  Int
  imageUrl String
  order    Int
  color    ProductColor @relation(fields: [colorId], references: [id])
}

model ProductColorVariants {
  id         Int          @id @default(autoincrement())
  colorId    Int
  price      Float
  size       String
  stock      Int
  color      ProductColor @relation(fields: [colorId], references: [id])
  orderItems OrderItem[]
}

model Order {
  id          Int         @id @default(autoincrement())
  userId      Int?
  status      String      @default("PENDING") // PENDING,CONFIRMED, SHIPPING, DELIVERED, CANCELED
  totalAmount Float
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  user        User?       @relation(fields: [userId], references: [id])
  items       OrderItem[]
  address     Address?
}

model OrderItem {
  id               Int                  @id @default(autoincrement())
  orderId          Int
  productVariantId Int
  quantity         Int
  price            Float
  order            Order                @relation(fields: [orderId], references: [id])
  variant          ProductColorVariants @relation(fields: [productVariantId], references: [id], onDelete: Cascade)
}

model Address {
  id       Int    @id @default(autoincrement())
  orderId  Int    @unique
  fullname String
  phone    String
  street   String
  city     String
  orders   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)
}
